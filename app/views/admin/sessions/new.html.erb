<div class="container">
  <div class="row">
    <div class="col mt-4">
    <h3 class="mini-title">管理者ログイン</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group row mt-4">
          <%= f.label :メールアドレス, class: "col-3" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", class:"col-9" %>
        </div>

        <div class="field form-group row mb-5">
          <%= f.label :パスワード, class: "col-3" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"col-9" %>
        </div>

        <div class="actions form-group row">
          <%= f.submit "ログイン", class:"btn btn-primary col-3 offset-3" %>
          <div class="col-6"></div>
        </div>
      <% end %>
      </div>

    <div class="col-3"></div>
  </div>
<div>
</div>
<%= render "admin/shared/links" %>
