<%= render "layouts/errors", obj: obj %>
<%= form_with model: obj, url: @path, local:true do |f| %>
    <div class="form-group row">
      <%= f.label :name, "登録ワード", class: "col-4"  %>
      <%= f.text_field :name, autofocus: true, class: "form-control col-4" %>
    </div>
    <div class="form-group row pb-3 mb-0">
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>
<% end %>