<div class="col-8 mx-auto pb-3">
  <h4 class="mini-title mt-3 mb-2">タグ登録/一覧</h4>
  <%= render "admin/shared/word_form", obj: @new_tag %>
  <% if @tags.exists? %>
    <table class='table table-inverse table-hover text-center mb-0'>
      <thead>
        <tr>
          <th>登録ワード</th>
          <th>登録件数</th>
          <th></th>
        </tr>
      </thread>
      <tbody>
        <% @tags.each do |tag| %>
        <tr>
          <td><%= link_to tag.name, admin_tag_path(tag) %></td>
          <td><%= tag.articles.count %>件</td>
          <td class="col-3"><%= link_to "編集", edit_admin_tag_path(tag), class: "btn btn-success" %>
              <%= link_to "削除", admin_tag_path(tag), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか?"  %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= paginate @tags %>
    </div>
  <% else %>
    <div class="col-4 mx-auto mt-5">
      <p class="mt-4 pb-3">登録済みタグはありません</p>
    </div>
  <% end %>
</div>