<div class="col-8 mx-auto">
  <h4 class="mini-title mt-3">タグ編集</h4>
  <%= form_with model: @tag, url: admin_tag_path(@tag), local:true do |f| %>
  <%= render "layouts/errors", obj: @tag %>
    <div class="form-group row">
      <%= f.label :name, "登録ワード", class: "col-4"  %>
      <%= f.text_field :name, autofocus: true, class: "form-control col-4" %>
    </div>
    <div class="form-group row pb-3 mb-0">
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>
  <% end %>
</div>