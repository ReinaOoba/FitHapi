<div class="container">
  <% if @articles.exists?%>
    <h3><%= @user.name %>@<%= @user.account %>の記事</h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>Title</th>
            <th>カテゴリー</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @articles.each do |article| %>
          <tr>
            <td><%= link_to article.title, admin_article_path(article) %></td>
            <td><%= article.category.name %></td>
            <td>いいね数：<%= article.favorites.count %></td>
            <td>コメント数：<%= article.comments.count %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <div class="d-flex justify-content-center">
      <%= paginate @articles %>
    </div>
    <%= link_to "ユーザー詳細に戻る", admin_user_path(@user), class: "btn btn-success" %>
  <% else %>
    <p>投稿した記事はありません</p>
  <% end %>
  <%= link_to "ユーザー詳細に戻る", admin_user_path(@user), class: "btn btn-success" %>
</div>
