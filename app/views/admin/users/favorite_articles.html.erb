<div class="container">
  <h3><%= @user.name %>さんのいいね</h3>
  <% if @favorites.exists? %>
    <table  class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>タイトル</th>
          <th>投稿者</th>
          <th>いいね数</th>
          <th>コメント数</th>
        </tr>
      </thead>
      <tbody>
        <% @favorites.each do |favorite| %>
          <tr>
            <td><%= link_to favorite.article.title, admin_article_path(favorite.article) %></td>
            <td><%= favorite.article.user.name %></td>
            <td><%= favorite.article.favorites.count %></td>
            <td><%= favorite.article.comments.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= paginate @favorites %>
    </div>
  <% else %>
    いいねした記事はまだありません
  <% end %>
  <div>
    <%= link_to "ユーザー詳細に戻る", admin_user_path(@user), class: "btn btn-success" %>
  </div>
</div>
