<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="mini-title">会員一覧</div>
    </div>
  </div>
    <div class="row justify-content-center">
      <div class="col-11">
        <table class="table table-bordered table-hover text-center">
          <thead class="thead">
            <tr>
              <th style="width: 10%">ユーザーID</th>
              <th style="width: 30%">アカウント名</th>
              <th style="width: 30%">メールアドレス</th>
              <th style="width: 30%">会員ステータス</th>
            </tr>
          </thead>
          <tbody class="tbody">
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td>
              <%= link_to user.account, admin_user_path(user), class: "text-dark" %>
              </td>
              <td><%= user.email %></td>
              <td>
                <% if user.active_for_authentication? %>
                  <b class="text-success">有効</b>
                <% else %>
                  <b class="text-muted">退会</b>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="d-flex justify-content-center">
        <%= paginate @users %>
    </div>
</div>