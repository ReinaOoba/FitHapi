<div class="container">
  <h3>記事一覧</h3>
<table class='table table-hover table-inverse text-center'>
  <thead>
    <tr>
      <th style="width: 30%">Title</th>
      <th style="width: 20%">投稿者</th>
      <th style="width: 10%">カテゴリー</th>
      <th style="width: 10%">公開設定</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, admin_article_path(article) %></td>
        <td>
          <%= link_to admin_user_path(article.user) do %>
            <%= article.user.name %>@<%= article.user.account %>
          <% end %>
          </td>
        <td><%= article.category.name %></td>
        <td><%= article.status %></td>
        <td>いいね数：<%= article.favorites.count %>件</td>
        <td>コメント数：<%= article.comments.count %>件</td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
  <%= paginate @articles %>
</div>
</div>
