<div class="container">
  <h3>記事一覧</h3>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Title</th>
      <th>投稿者</th>
      <th>カテゴリー</th>
      <th>公開設定</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, admin_article_path(article) %></td>
        <td><%= link_to article.user.name, admin_user_path(article.user) %></td>
        <td><%= article.category.name %></td>
        <td><%= article.status %></td>
        <td>いいね数：<%= article.favorites.count %>件</td>
        <td>コメント数：<%= article.comments.count %>件</td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
  <%= paginate @articles %>
</div>
</div>
