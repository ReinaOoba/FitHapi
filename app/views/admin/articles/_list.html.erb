<table class='table table-hover table-inverse  text-center'>
  <thead>
    <tr>
      <th style="width: 40%">Title</th>
      <th style="width: 20%">投稿者</th>
      <th>カテゴリー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, admin_article_path(article) %></td>
        <td>
          <%= image_tag article.user.get_profile_image(40,40), style: "border-radius: 50%" %>
          <%= link_to article.user.name, admin_user_path(article.user) %>
        </td>
        <td><%= article.category.name %></td>
        <td>いいね数：<%= article.favorites.count %></td>
        <td>コメント数：<%= article.comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
    <%= paginate articles %>
</div>