<div class='container'>
  <div class='mx-auto'>
    <h3><%= @user.name %>さんのページ</h3>
    <div class="row">
      <div class="col-8">
        <table class="table table-bordered ml-5">
          <tbody>
            <tr>
              <th class="col-4 text-center">ニックネーム</th>
              <td><%= @user.name %></td>
            </tr>
            <tr>
              <th class="col-4 text-center">アカウント名</th>
              <td><%= @user.account %></td>
            </tr>
            <tr>
              <th class="col-4 text-center">自己紹介</th>
              <td><%= @user.introduction %></td>
            </tr>
          <tbody>
        </table>
      </div>
    </div>
    <% if @user = current_user %>
    <div class="text-center">
     <%= link_to "アカウント情報の変更", edit_user_path(@user), class:"btn btn-success col-3" %>
    </div>
    <% end %>
    <div class="row">
      <div class="col-8 mx-2 ml-5">
        <h4 class="title">過去の投稿記事
          <!---->
        </h4>
        <h4 class="title">まいトレ
          <!--%= link_to "一覧を見る", user_mytrainings_path, class:"btn btn-primary ml-4" %>-->
        </h4>
        <h4 class="title">いいねした記事
          <!--%= link_to "一覧を見る", user_favorites_path, class:"btn btn-primary" %>-->
        </h4>
      </div>
    </div>
  </div>
</div>