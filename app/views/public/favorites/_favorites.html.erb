<% if article.favorited_by?(current_user) %>
    <%= link_to article_favorites_path(article), class: "btn btn-warning", method: :delete, remote: true do %>
      いいね！ <i class="fas fa-heart" aria-hidden="true"></i><%= article.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to article_favorites_path(article), class: "btn btn-outline-warning", method: :post, remote: true do %>
     いいねする <i class="far fa-heart" aria-hidden="true"></i><%= article.favorites.count %>
  <% end %>
<% end %>