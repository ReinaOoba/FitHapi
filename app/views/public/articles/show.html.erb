<div class="container py-3">
　<div class="article-contents mx-auto col-9">
　  <div class="article-title row">
　　  <h3 class="mb-3"><%= @article.title %></h3>
　　  <div class="row article-user">
　　    <p>投稿者：</p>
　　  　<%= link_to user_path(@article.user) do %>
　　      <%= @article.user.name %>@<%= @article.user.account %>
　　    <% end %>
　　  </div>
　　</div>
　　<div>
      <%= safe_join(@article.text.split("\n"),tag(:br)) %>
    </div>
    <% @article.article_images.each do |article_image| %>
      <%= image_tag(article_image, width:300) %>
    <% end %>
    <!--%= video_tag(article_video, width:300) %>-->
　</div>

  <div>
    <div class="article_info col-4">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>カテゴリー</th>
            <td><%= link_to @article.category.name, category_path(@article.category) %></td>
          </tr>
          <tr>
            <th>タグ</th>
            <td>
              <% @article_tags.each do |tag|%>
                <%= link_to tag.name, tag_path(tag) %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>投稿日</th>
            <td><%= @article.created_at.to_s(:datetime_jp) %></td>
          </tr>
        </tbody>
      </table>
      <% if @article.user == current_user %>
      <div class="mt-4">
        <%= link_to "編集する", edit_article_path(@article), class: "btn btn-success" %>
      </div>
      <% end %>

      <div class="article_reaction">
        <% if user_signed_in? %>
          <%= render "public/favorites/favorites", article: @article %>

          <% unless @article.user == current_user %>
            <%= render "public/relationships/follow_btn", user: @article.user %>
          <% end %>

          <p>コメント</p>
          <%= render "public/comments/c_form", article: @article, comment: @comment %>
        <% end %>

        <p>コメント一覧</p>
        <% if @article.comments.exists? %>
          <%= render "public/comments/c_index", article: @article %>
        <% else %>
          <p>コメントはまだありません</p>
        <% end %>

      </div>
    </div>
  </div>
</div>