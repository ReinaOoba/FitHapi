<div class="container py-3">
  <div class="row">
　　<h3 class="mini-title mb-3"><%= @article.title %></h3>
  </div>
  <div class="row">
    <div>
      <%= @article.text %>
    </div>
    <div class="article_info">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>カテゴリー</th>
            <td><%= @article.category.name %></td>
          </tr>
          <tr>
            <th>タグ</th>
            <td><%= @article.tags.map(&:name).join(', ') %></i></td>
          </tr>
          <tr>
            <th>投稿日</th>
            <td><%= @article.created_at %></td>
          </tr>
          <tr>
        </tbody>
      </table>
      <% if @article.user == current_user %>
      <div class="mt-4">
        <%= link_to "編集する", edit_article_path(@article), class: "btn btn-success" %>
      </div>
      <% end %>
      <div class="article_reaction">
        <p>いいね(未実装)</p>
        <!--%= render "favorites/favorites", article: @article %>-->
        <p>コメント</p>
        <%= render "public/comments/c_form", article: @article, comment: @comment %>
        <p>コメント一覧</p>
        <% if @article.comments.exists? %>
          <%= render "public/comments/c_index", article: @article %>
        <% else %>
          <p>コメントはまだありません</p>
        <% end %>
      </div>
    </div>
  </div>
</div>