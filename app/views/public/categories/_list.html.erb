<table class='table table-hover table-inverse text-center'>
  <thead>
    <tr>
      <th style="width: 40%">Title</th>
      <th style="width: 20%">投稿者</th>
      <th>タグ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
        <td>
          <%= image_tag article.user.get_profile_image(40,40), style: "border-radius: 50%" %>
          <%= link_to user_path(article.user) do%>
            <%= article.user.name %>@<%= article.user.account %>
          <% end %>
        </td>
        <td><%= article.tags.map(&:name).join(', ') %></td>
        <td><i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>：<%= article.favorites.count %></td>
        <td><i class="fas fa-comment" aria-hidden="true" style="color: blue;"></i>：<%= article.comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
    <%= paginate articles %>
</div>