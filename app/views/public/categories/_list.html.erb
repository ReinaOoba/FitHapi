<table class='table table-hover table-inverse text-center'>
  <thead>
    <tr>
      <th style="width: 50%">Title</th>
      <th>投稿者</th>
      <th>タグ</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= link_to article.user.name, user_path(article.user) %></td>
        <td><%= article.tags.map(&:name).join(', ') %></td>
        <td>いいね数：<%= article.favorites.count %></td>
        <td>コメント数：<%= article.comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="d-flex justify-content-center">
    <%= paginate articles %>
</div>