<%= form_with model: my_training, local: true do |f| %>
    <div class="form-group row">
     <%= f.label :menu, class: "col-3" %>
     <%= f.text_field :menu %>
    </div>

    <div class="form-group row">
     <%= f.label :set, class: "col-3" %>
     <%= f.text_area :set %>
    </div>

    <div class="form-group row">
     <%= f.label :note, class: "col-6" %>
     <%= f.text_field :note, class: "form-control" %>
    </div>

    <div class="form-group row pb-3 mb-0">
     <%= f.submit "決定", class: "btn btn-success offset-6" %>
    </div>
<% end %>