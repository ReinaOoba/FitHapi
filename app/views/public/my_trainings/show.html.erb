<div class="container col-8 mx-auto">
  <h3>まいトレ詳細</h3>

  <div class="menu mt-5">
    <h5>トレーニング名</h5>
    <%= @my_training.menu %>
  </div>
  <div class="set mt-5">
    <h5>回数・セット数</h5>
    <%= safe_join(@my_training.set.split("\n"),tag(:br)) %>
  </div>
  <div class="note mt-5">
    <h5>メモ</h5>
    <%= safe_join(@my_training.note.split("\n"),tag(:br)) %></br>
    <div class="edit_btn mt-3">
      <% if @my_training.user_id == current_user.id %>
        <%= link_to "編集", edit_my_training_path(@my_training), class: "btn btn-success" %>
        <%= link_to "削除", my_training_path(@my_training), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に削除しますか?" %>
      <% end %>
    </div>
  </div>

  </br><%= link_to "一覧に戻る", user_my_trainings_path(@my_training.user), class: "btn btn-primary" %>
</div>

