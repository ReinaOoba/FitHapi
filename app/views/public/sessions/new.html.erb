<%= render "layouts/errors", obj: resource %>
<div class="container">
 <div class="col-8 mx-auto">
  <h3 class="mini-title">ログイン</h3>
   <%= form_for(resource, url: session_path(resource_name)) do |f| %>
    <p class="mini-title">会員の方はこちらからログイン</p>
     <div class="form-group row">
      <%= f.label :email, "メールアドレス", class:"col-4" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-4" %>
     </div>
      <div class="form-group row">
       <%= f.label :password, "パスワード", class:"col-4" %>
       <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-4" %>
      </div>
       <div class="form-group text-center">
        <%= f.submit "ログイン",class: 'btn btn-sm btn-primary col-4' %>
       </div>
   <% end %>
   <div class="mt-3 ml-4 pb-4 row">
    <p>会員登録がお済みでない方</p>
    <%= render "public/shared/links" %>
   </div>
  </div>
</div>