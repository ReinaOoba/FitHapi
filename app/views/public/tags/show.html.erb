<div class="container">
    <h3><%= @tag.name %>タグの記事</h3>
    <% if @articles.exists? %>
      <%= render "public/categories/list", articles: @articles %>
    <% else %>
      <p>投稿記事はありません</p>
    <% end %>
    <div class="text-center mb-3">
      <%= link_to "トップページへ戻る", root_path, class: "btn btn-success" %>
    </div>
</div>